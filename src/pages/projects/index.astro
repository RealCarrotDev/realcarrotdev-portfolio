---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
---

<BaseLayout title="Portfolio Hub" sideBarActiveItemID="projects">
  <div>
    <div class="text-5xl font-bold mb-5">Animation Portfolio</div>
    <div class="mb-10 text-justify">
      Browse my work by category below. Click a section header to expand it.
    </div>
  </div>

  <details class="collapse collapse-arrow bg-base-200 mb-6">
    <summary class="collapse-title text-3xl font-bold">Client Commissions</summary>
    <div class="collapse-content">
      
      <div class="pt-4">
        
        <HorizontalCard
          title="Commissions for Doctor"
          img="/thumbnails/doctor_thumb.png" 
          desc="A collection of custom animations created for Doctor."
          url="/projects/doctor"
          badge="Client Work"
        />
        <div class="divider my-0"></div>

        <HorizontalCard
          title="Commissions for Toyota"
          img="/thumbnails/toyota_thumb.png"
          desc="A collection of custom animations created for Toyota."
          url="/projects/toyota"
          badge="Client Work"
        />
        <div class="divider my-0"></div>

        <HorizontalCard
          title="Commissions for Fai"
          img="/thumbnails/fai_thumb.png"
          desc="A collection of custom animations created for Fai."
          url="/projects/fai"
          badge="Client Work"
        />
        <div class="divider my-0"></div>

        <HorizontalCard
          title="Commissions for Mikirae"
          img="/thumbnails/mikirae_thumb.png"
          desc="A collection of custom animations created for Mikirae."
          url="/projects/mikirae"
          badge="Client Work"
        />
        
      </div>
    </div>
  </details>


  <details class="collapse collapse-arrow bg-base-200 mb-6">
    <summary class="collapse-title text-3xl font-bold">Server & Game Projects</summary>
    <div class="collapse-content">
      <div class="pt-4">

        <HorizontalCard
          title="Storymons"
          img="/thumbnails/storymons_thumb.png"
          desc="Extensive creature animations for the Storymons RPG."
          url="/projects/storymons"
          badge="Server Project"
        />
        <div class="divider my-0"></div>

        <HorizontalCard
          title="Pikmin Fan Projects"
          img="/thumbnails/pikmin_thumb.png"
          desc="Recreations and custom animations within the Pikmin style."
          url="/projects/pikmin"
          badge="Fan Project"
        />
        
      </div>
    </div>
  </details>

</BaseLayout>
