---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Donate" sideBarActiveItemID="donate">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Restoring Sanity... ðŸ¥•</div>
    <div class="text-5xl font-bold">Fuel the Carrot</div>
    <div class="py-2">
      <p class="text-lg">
        Thanks for supporting my work and keeping my sanity levels stable.
      </p>
    </div>
    
    <div class="mt-8 w-full flex justify-center">
      <div class="kofi-card">
        <iframe 
          id='kofiframe' 
          src='https://ko-fi.com/realcarrotdev/?hidefeed=true&widget=true&embed=true&preview=true' 
          style='border:none;width:100%;padding:0;' 
          height='712' 
          title='realcarrotdev'
        ></iframe>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* This makes the white iframe look like a designed card */
  .kofi-card {
    background: white;
    border-radius: 16px;       /* Rounds the corners */
    overflow: hidden;          /* Clips the sharp edges of the iframe */
    box-shadow: 0 10px 30px rgba(0,0,0,0.5); /* Adds a dark shadow */
    max-width: 500px;          /* Prevents it from getting too wide */
    width: 100%;
  }
</style>
